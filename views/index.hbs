<body>

    <div class="table">
        <form class="form-table">
            <label>Tworzenie Pokoju</label>
            <input type="text" class="roomname-client" placeholder="nazwa pokoju">
            <input type="password" class="create-password-client" placeholder="password">
            <input type="number" class="room-type" placeholder="1-4">
            <input type="submit" class="button-create-room" value="Utwórz">

