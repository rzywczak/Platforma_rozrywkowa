            </table>
        </form>
    </div>

    <script>

        let createRoomButton = document.querySelector('.button-create-room');

        createRoomButton.addEventListener('click', () => {

            const roomName = document.querySelector('.roomname-client').value;
            const password = document.querySelector('.create-password-client').value;
            const roomId = document.querySelector('.room-type').value;

            const data = { roomName, password, roomId };
            const options = {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(data)
            };
            fetch('/api', options).then(res => {
               console.log(res)
            })
              alert('Udało Ci się stowrzyć grupę');
});





    </script>


